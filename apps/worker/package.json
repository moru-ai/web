{
  "name": "@moru/worker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "start": "NODE_ENV=production node dist/index.js",
    "build": "node ./esbuild.config.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\""
  },
  "nodemonConfig": {
    "watch": "src",
    "ignore": [
      "dist/**",
      "node_modules/**"
    ],
    "ext": "ts",
    "exec": "rm -rf dist && node ./esbuild.config.js && node ./dist/index.js | pino-pretty --singleLine"
  },
  "dependencies": {
    "@fastify/awilix": "^8.0.0",
    "awilix": "^12.0.5",
    "bullmq": "^5.61.0",
    "convex": "^1.28.0",
    "dockerode": "^4.0.2",
    "dotenv": "^16.4.7",
    "fastify": "^5.6.1",
    "ioredis": "^5.6.0"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.37",
    "esbuild": "^0.25.11",
    "glob": "^11.0.3",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.19.5"
  }
}
