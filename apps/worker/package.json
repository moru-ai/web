{
  "name": "@moru/worker",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "typecheck": "tsc",
    "start": "NODE_ENV=production node --loader=extensionless dist/server.js",
    "build": "pnpm typecheck && node ./esbuild.config.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\""
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "ignore": [
      "dist/**",
      "node_modules/**"
    ],
    "ext": "ts",
    "exec": "rm -rf dist && node ./esbuild.config.js && node --loader=extensionless ./dist/server.js | pino-pretty --singleLine"
  },
  "dependencies": {
    "@fastify/autoload": "^6.1.0",
    "@fastify/awilix": "^8.0.0",
    "@fastify/env": "^5.0.2",
    "@sinclair/typebox": "^0.34.16",
    "awilix": "^12.0.5",
    "bullmq": "^5.61.0",
    "convex": "^1.28.0",
    "dockerode": "^4.0.2",
    "dotenv-safe": "^9.1.0",
    "extensionless": "^2.0.2",
    "fastify": "^5.6.1",
    "fastify-graceful-shutdown": "^4.0.1",
    "fastify-plugin": "^5.0.1",
    "ioredis": "^5.6.0"
  },
  "devDependencies": {
    "@types/dockerode": "^3.3.37",
    "esbuild": "^0.25.11",
    "glob": "^11.0.3",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.19.5"
  }
}
